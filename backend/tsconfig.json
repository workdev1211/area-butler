{
  "compilerOptions": {
    "module": "commonjs",
    "paths": {
      "@area-butler-types/*": [
        "./../shared/types/*",
      ]
    },
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./../shared/types/*.ts",
  ]
}
