{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "copyfe": "mkdir -p dist/static && mkdir -p dist/static/embed && cp -R ../frontend/build/* dist/static && cp -R ../frontend/build-embed/* dist/static/embed",
    "prebuild": "rimraf dist",
    "build": "nest build && npm run copyfe",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@liberty-rider/flexpolyline": "^0.1.0",
    "@nestjs/axios": "0.0.7",
    "@nestjs/common": "^8.4.3",
    "@nestjs/core": "^8.4.3",
    "@nestjs/event-emitter": "^1.1.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mongoose": "^9.0.3",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.4.3",
    "@nestjs/schedule": "^1.1.0",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/terminus": "^8.0.6",
    "@turf/boolean-point-in-polygon": "^6.5.0",
    "@turf/circle": "^6.5.0",
    "@turf/helpers": "^6.5.0",
    "@types/node-geocoder": "^3.24.2",
    "@types/stripe": "^8.0.417",
    "clone-buffer": "^1.0.0",
    "dotenv": "^10.0.0",
    "fuse.js": "^6.4.6",
    "haversine": "^1.1.1",
    "jwks-rsa": "^2.0.4",
    "mongoose": "^6.0.4",
    "node-geocoder": "^3.27.0",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "sib-api-v3-sdk": "^8.2.1",
    "stripe": "^8.184.0",
    "swagger-ui-express": "^4.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.4",
    "@nestjs/schematics": "^8.0.8",
    "@nestjs/testing": "^8.4.3",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.3",
    "@types/jest": "25.1.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.6.1",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "ajv": "^7.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
